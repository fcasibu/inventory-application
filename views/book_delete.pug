extends layout

block content
  h6 Are you sure you want to delete #{book.title}?
  p It will delete all chapters related to it
  form(action='' method='POST' style='display: flex; flex-direction: column; gap: 1rem')
    label.form-control-book
      p Admin Password
      input(type='password' name='password')
      if error
        p.error-message= error.msg

    button.btn.btn__danger(type='submit' style='padding: 0.3rem 2rem') Delete
